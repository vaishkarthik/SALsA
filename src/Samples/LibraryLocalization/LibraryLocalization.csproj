<Project ToolsVersion="15.0" DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Import Project="$(MSBuildExtensionsPath)\$(MSBuildToolsVersion)\Microsoft.Common.props" />
  <PropertyGroup>
    <OutputType>library</OutputType>
    <AssemblyName>LibraryLocalization</AssemblyName>
    <ProjectGuid>{7539DE05-C391-400A-AE9A-BFABFBA76416}</ProjectGuid>
    <OutputPath>bin\$(Configuration)\</OutputPath>
    <BuildVersionXml>$(MSBuildThisFileDirectory)versions.xml</BuildVersionXml>
  </PropertyGroup>
  <PropertyGroup>
    <!--
      Enables localization.
    -->
    <EnableLocalization>true</EnableLocalization>
    <!--
      Specifically enables the localization of EmbeddedResource items,
      eventually to generate satellite assemblies (aka localized DLLs) with resulting localized RESX files.
      In this case, LocProject.json is unnecessary.
    -->
    <EmbeddedResourceLocalization>true</EmbeddedResourceLocalization>
    <LanguageSet>Azure_Languages</LanguageSet>
    <!--
      Enables the localization of non-EmbeddedResource type files using LocProject.json.
    -->
    <LocProject>$(MSBuildThisFileDirectory)LocProject.json</LocProject>
    <!--
      Note: Make sure to choose either EmbeddedResource localization or Generic localization but not both for the same file.
      Can cause race condition issues.
    -->
  </PropertyGroup>
  <ItemGroup>
    <NuspecFiles Include="$(MSBuildProjectDirectory)\NugetIncludeFile.txt">
      <NuspecFilesTarget>lib/net40</NuspecFilesTarget>
    </NuspecFiles>
  </ItemGroup>
  <ItemGroup>
    <Compile Include="Simple.cs" />
    <EmbeddedResource Include="Strings.resx" />
  </ItemGroup>
  <Import Project="$(MSBuildToolsPath)\Microsoft.CSharp.targets" />
  <ItemGroup>
    <QCustomInput Include="@(NuspecFiles)">
      <Visible>false</Visible>
    </QCustomInput>
    <QCustomInput Include="$(MSBuildThisFileDirectory)versions.xml">
      <Visible>false</Visible>
    </QCustomInput>
    <QCustomInput Include="$(MSBuildThisFileDirectory)LocProject.json">
      <Visible>false</Visible>
    </QCustomInput>
    <QCustomInput Include="$(MSBuildThisFileDirectory)resources.json">
      <Visible>false</Visible>
    </QCustomInput>
    <QCustomInput Include="$(MSBuildThisFileDirectory)pathA\resourcesA.json">
      <Visible>false</Visible>
    </QCustomInput>
    <QCustomInput Include="$(MSBuildThisFileDirectory)pathB\resourcesB.json">
      <Visible>false</Visible>
    </QCustomInput>
    <QCustomInput Include="$(MSBuildThisFileDirectory)Strings.resx">
      <Visible>false</Visible>
    </QCustomInput>
    <QCustomInput Include="$(MSBuildThisFileDirectory)loc\**\*.lcl">
      <Visible>false</Visible>
    </QCustomInput>
  </ItemGroup>
</Project>
